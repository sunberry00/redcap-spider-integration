{
    "name": "SPIDER Integration",
    "namespace": "Imi\\SpiderIntegration",
    "description": "Generates pseudonyms for patients using SPIDER",
    "authors": [
        {
            "name": "Alexander Ivanets",
            "email": "aivanets@ukaachen.de",
            "institution": "University Hospital Aachen"
        }
    ],
    "permissions": [
        "redcap_every_page_top",
        "redcap_data_entry_form"
    ],
    "project-settings": [
        {
            "key": "p12-certificate",
            "name": "P12 Certificate File",
            "type": "file",
            "required": true,
            "file-types": ["p12"]
        },
        {
            "key": "p12-password",
            "name": "P12 Certificate Password",
            "type": "password",
            "required": true
        },
        {
            "key": "pseudonym-field",
            "name": "REDCap Field Variable Name",
            "type": "text",
            "required": true,
            "default": "pseudonym_field"
        },
        {
            "key": "rest-service-url",
            "name": "REST Service URL",
            "type": "text",
            "required": true,
            "default": "https://example.com/api/pseudonym"
        }
    ]
}